ScriptName="${0##*/}";ScriptVersion=0.1
Help="
usage: $ScriptName [options] COMMAND

List of Commands:
    help            display a helpful usage message
    info            display details about a project or group of projects
    install         install projects on the aiman directory
    list            list projects
    reinstall       reinstall a project
    remove          remove projects from the aiman directory

Options:
    -h, --help      show command help
    -V, --version   show $ScriptName version and exit

Examples:
    $ScriptName info webui
"

CodeDir='./1_aiman'

source "$CodeDir/helpers.sh"

# define the allowed commands as a string with space-separated values
VALID_COMMANDS='info' #"install remove launch config"


function read_modules() {

    # loop through each line in the file
    while read -r name hash description
    do
        # Print the name, hash, and description for each line
        echo "Name: $name"
        echo "Hash: $hash"
        echo "Description: $description"
    done < file.txt}
}




#================================== START ==================================#

command=''
projects=''
options=''
show_help=false

# loop through all the script parameters
while [ $# -gt 0 ]; do
    param=$1
    case "$param" in
        -h | --help)          show_help=true             ;;
        -v | --version)       command=print_version      ;;
        -*)                   options="$options $param"  ;;
        *)
          if [[ " $VALID_COMMANDS " == *" $param "* ]]; then
            command=$param
          else 
            projects="$projects $param"
          fi
          ;;
    esac
    shift
done
# trim leading spaces
options=${options#" "}
projects=${projects#" "}

#echo "command = '$command'"
#echo "options = '$options'"
#echo "projects = '$projects'"

if [[ "$command" == print_version ]]; then
    echo $ScriptVersion
    exit 0
elif [[ -n $command ]]; then
    source "$CodeDir/command-$command.sh"
fi

if $show_help; then
    echo "$Help"
    exit 0
else
    run_command "$options" "$projects"
    exit $?
fi

